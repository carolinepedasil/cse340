<main id="main-content" class="container">
  <h1>Add New Classification</h1>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>

  <form method="post" action="/inv/add-classification" class="form-card form-card--compact">
    <p class="form-note">FIELD IS REQUIRED.</p>

    <fieldset class="field-box">
      <legend>Classification Name</legend>
      <small class="hint">NAME MUST BE ALPHABETIC CHARACTERS ONLY.</small>

      <input
        id="classification_name"
        name="classification_name"
        type="text"
        required
        pattern="^[A-Za-z]+$"
        aria-describedby="nameHint"
        value="<%= classification_name || '' %>"
      />
    </fieldset>

    <button type="submit" class="btn-primary">Add Classification</button>
  </form>
</main>
