<header class="site-header">
  <a class="skip-link" href="#main">Skip to content</a>
  <div class="brand">
    <img src="/images/site/logo.png" width="40" height="40" alt="" />
    <span class="brand-title">CSE Motors</span>
  </div>
  <ul>
    <% if (locals.loggedin) { %>
      <div style="float:right">
        <a href="/account/">Welcome <%= locals.account_firstname %></a>
      </div>
      <br />
      <div style="float:right">
        <a href="/account/logout">Logout</a>
      </div>
    <% } else { %>
      <div style="float:right">
        <a href="/account/login">MY ACCOUNT</a>
      </div>
    <% } %>
  </ul>
</header>
