<main class="container">
  <h1>Account Management</h1>

  <% if (success && success.length) { %>
    <div class="flash flash-success"><%= success[0] %></div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="flash flash-error"><%= error[0] %></div>
  <% } %>

  <h2>Welcome <%= account_firstname %></h2>

  <p>
    <a href="/account/update/<%= account_id %>">Edit Account Information</a>
  </p>

  <% if (account_type === 'Employee' || account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Manage Inventory</a></p>
  <% } %>
</main>
